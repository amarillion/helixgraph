{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ES2020",
		"lib": ["ES2018", "DOM"],
		"outDir": "./lib",
		"declaration": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": ["./src"],
	"exclude": ["**/*.spec.ts"]
}